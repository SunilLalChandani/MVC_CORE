
<div>

    List of all available drinks
</div>
<div class="row">
    @{

        foreach (var drink in Model)
        {
            <div class="col-lg-3 ">
                

                    <div class="card" >
                        <img src="@drink.Photo" alt="image" class="card-img-top" width="200px" height="200px" />
                        <div class="card-body">
                            <h2 class="card-title">@drink.drinkName</h2>
                            <p class="card-text">@drink.shortDescription</p>
                            <a href="#" class="btn btn-primary">See details</a>
                        </div>
                    </div>
                </div>
           
        }
    }
</div>
    @{
