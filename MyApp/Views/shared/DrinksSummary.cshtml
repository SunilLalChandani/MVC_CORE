@model drinks

    <div class="row">
        <div class="col-lg-3">


            <h4>Drink Name:   @Model.drinkName</h4>
        </div>

        <div class="col-lg-3">

            <h6>Drink Category @Model.Category</h6>
        </div>

        <div class="col-lg-3">

            <h4>Price: @Model.price</h4>
        </div>

        <div class="col-lg-3">

            <img src="@Model.Photo" alt="Alternate Text" style="height:100px;width:100px;" />
        </div>
    </div>

